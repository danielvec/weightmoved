<div class="flex justify-center items-center h-screen m-12">
  <div class="w-6 max-w-md">
    <h2 class="mb-6 text-center">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-gray-600" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 p-2 w-full rounded-md" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-sm font-medium text-gray-600" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 p-2 w-full rounded-md" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-sm text-gray-600" %>
        </div>
      <% end %>

      <div>
        <%= f.submit "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
